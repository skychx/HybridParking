{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "lib": [
      "es2020",
      "DOM"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist/es",
    "preserveConstEnums": true,
    "rootDir": "./src",
    "strict": true,
    "target": "esnext",
    "tsBuildInfoFile": "./tsconfig.tsbuildinfo"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": []
}